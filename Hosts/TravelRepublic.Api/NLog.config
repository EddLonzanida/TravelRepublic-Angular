<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogFile="./Logs/TravelRepublic/NLog.Internal.log">

  <!--<variable name="logFilePath" value=".\Logs\NLog.${date:format=yyyy-MM-dd}.log" />-->

  <targets async="true">

	<!-- database target -->
    <!--https://github.com/nlog/NLog/wiki/Database-target-->
    <target name="NLogDb"
            xsi:type="Database"
            connectionString="${gdc:item=TravelRepublicConnectionString}">
      <commandText>
        EXEC usp_Logs_Insert
             @machineName
            ,@logLevel
            ,@callSite
            ,@type
            ,@message
            ,@stackTrace
            ,@innerException
            ,@additionalInfo;
      </commandText>
      <parameter name="@machineName" layout="${machinename}" />
      <parameter name="@logLevel" layout="${level}" />
      <parameter name="@callSite" layout="${callsite}" />
      <parameter name="@type" layout="${exception:format=type}" />
      <parameter name="@message" layout="${exception:format=message}" />
      <parameter name="@stackTrace" layout="${exception:format=stackTrace}" />
      <parameter name="@innerException" layout="${exception:format=:innerFormat=ShortType,Message,Method:MaxInnerExceptionLevel=1:InnerExceptionSeparator=}" />
      <parameter name="@additionalInfo" layout="${message}" />
    </target>

    <!--<target name="logfile"
            xsi:type="File"
            fileName="${logFilePath}"
            layout="${longdate}  LEVEL=${level}: ${callsite:classNameDesc=true:includeSourcePath=true:methodNameDesc=true}${newline} 
            ${pad:padding=5:inner=${message}}${newline}
            ${when:when=length('${exception:format=tostring}') > 0:inner= ${pad:padding=5:inner=EXCEPTION\: ${exception:format=tostring}${newline}} }"
            keepFileOpen="false" />-->

   <!--<target type="ApplicationInsightsTarget" name="aiTarget" />-->

  </targets>

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <!--<add assembly="Microsoft.ApplicationInsights.NLogTarget" />-->
  </extensions>

  <rules>
    <logger name="*" minlevel="Warn" writeTo="NLogDb"/>
    <!--<logger name="*" minlevel="Debug" writeTo="logfile" />
    <logger name="*" minlevel="Trace" writeTo="aiTarget" />-->
  </rules>
</nlog>
